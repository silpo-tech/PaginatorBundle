{
  "name": "silpo-tech/paginator-bundle",
  "type": "symfony-bundle",
  "description": "Paginator bundle for Symfony",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "symfony/validator": "^6.2|^7.0",
    "silpo-tech/exception-handler-bundle": "^2.0",
    "symfony/framework-bundle": "^6.2 || ^7.0",
    "symfony/yaml": "^6.2 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "config": {
    "bin-dir": "bin",
    "symfony/runtime": true,
    "secure-http": false
  },
  "autoload": {
    "psr-4": {
      "PaginatorBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "scripts": {
    "test:coverage": {
      "command": "APP_ENV=test php -d extension=pcov.so -d pcov.enabled=1 bin/phpunit --colors=never --coverage-clover reports/coverage/clover.xml --log-junit reports/junit.xml"
    },
    "test:run": [
      "APP_ENV=test php bin/phpunit --color=always"
    ]
  }
}
